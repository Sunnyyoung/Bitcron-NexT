if not site.configs.hide_comments
    .comments#comments
        if site.configs.duoshuo and not site.configs.disqus
            .ds-thread(data-thread-key=post.url_path, data-title=post.title, data-url=request.host + post.url)
        else if site.configs.disqus and not site.configs.duoshuo
            #disqus_thread
                noscript
                    a(href='//disqus.com/?ref_noscript')= 'Comments powered by Disqus.'
        else
            +utils.html_comments(post)
